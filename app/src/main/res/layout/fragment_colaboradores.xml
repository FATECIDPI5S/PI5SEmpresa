                                android:layout_height="wrap_content"
                                android:text="Garçom"
                                android:textAppearance="@android:style/TextAppearance.Holo.Widget.ActionBar.Subtitle" />

                        </LinearLayout>

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnExcluirEmpresag2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:text="Excluir" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnAlterarEmpresag2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/btnExcluirEmpresag2"
                            android:text="Alterar" />

                        <androidx.appcompat.widget.AppCompatImageButton
                            android:id="@+id/imgbMostrarDescricaog2"
