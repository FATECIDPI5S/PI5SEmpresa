<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.icomidaempresa">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.activity.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.activity.SignUpActivity"
            android:label="@string/title_activity_sign_up"
            android:parentActivityName=".view.activity.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.com.icomidaempresa.view.activity.LoginActivity" />
        </activity>
        <activity
            android:name=".view.activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.activity.EmpresaActivity"
            android:label="@string/title_activity_empresa" />
        <activity
            android:name=".view.activity.ColaboradoresActivity"
            android:label="@string/title_activity_colaboradores" />
        <activity
            android:name=".view.activity.ProdutosActivity"
            android:label="@string/title_activity_produtos" />
        <activity
            android:name=".view.activity.AmbienteActivity"
            android:label="@string/title_activity_ambiente"/>
        <activity
            android:name=".view.activity.MesaActivity"
            android:label="@string/title_activity_mesa"/>
    </application>

</manifest>